{
  "name": "Sky130 EDA Environment",
  // 使用 OpenLane 镜像，因为它内置了 Magic 和完整的 Sky130 PDK
  "image": "efabless/openlane:current",
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
      },
      "extensions": [
        "ms-vscode.cpptools"
      ]
    }
  },
  // 自动设置环境变量，确保 Magic 能找到 PDK
  "containerEnv": {
    "PDK_ROOT": "/openlane/pdks",
    "PDK": "sky130A"
  },
  "postCreateCommand": "echo 'Environment Ready!'"
}